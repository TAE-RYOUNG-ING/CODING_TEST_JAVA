


// 풀이시간 00:06:43 & 제출점수 100점



class Solution {
	public int solution(int[] absolutes, boolean[] signs) {
	    
	    int sum = 0;
	    
	    for(int i=0; i<absolutes.length; i++) {
			if(signs[i] == false) {
				absolutes[i] = -absolutes[i];
			}
			sum += absolutes[i];
		}
	    
	    return sum;
	}
}